<style>
  .parent {
    display: grid;
    grid-template-columns: 1fr; /* On commence par une colonne pour mobile */
    grid-template-rows: auto; /* Hauteur automatique pour chaque ligne */
    grid-gap: 10px; /* Espace entre les divs pour les mobiles */
    height: auto; /* Hauteur automatique pour l'empilement */
    padding: 10px;
    margin: 0 auto;
  }

  /* Nouvelle classe pour la couleur de fond au survol */
  .hover-background {
    background-color: rgba(
      255,
      255,
      255,
      0.2
    ); /* Choisissez une couleur légèrement plus foncée */
  }

  /* Règles hover pour chaque section */
  .bio:hover,
  .skills:hover,
  .portfolio:hover,
  .progress:hover,
  .copyright:hover {
    background-color: rgba(
      255,
      255,
      255,
      0.2
    ); /* Appliquez la nouvelle couleur de fond au survol */
  }

  .bio,
  .skills,
  .progress,
  .copyright {
    display: flex;
    flex-direction: column;
    background: rgba(
      255,
      255,
      255,
      0.1
    ); /* Background commun pour chaque div */
    border: 2px solid white; /* Bordure blanche pour chaque div */
    box-shadow: 0 0 10px rgba(255, 255, 255, 0.5); /* Ombre légère pour le contraste */
    padding: 10px;
  }

  .portfolio {
    display: flex;
    background: rgba(
      255,
      255,
      255,
      0.1
    ); /* Background commun pour chaque div */
    border: 2px solid white; /* Bordure blanche pour chaque div */
    box-shadow: 0 0 10px rgba(255, 255, 255, 0.5); /* Ombre légère pour le contraste */
    padding: 10px;
  }

  /* SECTION BIOGRAPHIE
  ================================ */

  .bio-text {
    flex-direction: row;
    width: 100%;
    line-height: 1.4em;
    padding: 10px;
  }

  .bio-img {
    margin: 30px 0;
  }

  .bio-img img {
    margin: 0 auto;
    width: 75%;
  }

  /* SECTION SKILLS
  ================================ */

  .skills {
    flex-direction: column;
  }

  .skills h4 {
    padding-left: 20px;
    margin-bottom: 10px;
  }
  .skills div ul {
    display: flex;
    flex-direction: column;
    padding-left: 20px;
  }
  .skills div ul li {
    margin: 10px 0;
  }
  .skills ul li {
    display: flex;
    align-items: center;
  }

  .skills iconify-icon {
    margin-right: 8px;
  }

  /* MEDIA QUERIES
  ================================ */

  @media (max-width: 523px) {
    .skills div ul {
      flex-direction: row;
      flex-wrap: wrap;
    }
    .skills div ul li {
      flex: 0 0 50%; /* Chaque élément prend 50% de la largeur */
      margin: 15px 0;
    }
  }

  @media (min-width: 524px) and (max-width: 767px) {
    .skills div ul {
      flex-direction: row;
      flex-wrap: wrap;
      justify-content: space-evenly;
    }
    .skills div ul li {
      flex:
        0 0 33,
        33%; /* Chaque élément prend 50% de la largeur */
      margin: 15px 0;
      padding: 0 20px;
    }
  }

  @media (min-width: 768px) {
    .parent {
      grid-template-columns: repeat(
        6,
        1fr
      ); /* Retour à la grille 6x9 pour écrans plus grands */
      /* grid-template-rows: repeat(6, 1fr); */
      grid-column-gap: 20px;
      grid-row-gap: 20px;
      padding: 20px;
    }

    .bio {
      grid-area: 1 / 1 / 2 / 7;
      /* 1 / 1 / 2 / 7 signifie :
     - Début sur la 1ère rangée (ligne de départ)
     - Début sur la 1ère colonne (colonne de départ)
     - Étendre jusqu'à la 2ème rangée (juste avant la ligne de fin)
     - Étendre jusqu'à la 7ème colonne (juste avant la colonne de fin)
  */
    }

    .skills {
      grid-area: 2 / 1 / 4 / 3;
      /* 2 / 1 / 4 / 3 signifie :
     - Début sur la 2ème rangée
     - Début sur la 1ère colonne
     - Étendre jusqu'à la 4ème rangée
     - Étendre jusqu'à la 3ème colonne
  */
    }

    .portfolio {
      grid-area: 2 / 3 / 4 / 7;
      /* 2 / 3 / 4 / 7 signifie :
     - Début sur la 2ème rangée
     - Début sur la 3ème colonne
     - Étendre jusqu'à la 4ème rangée
     - Étendre jusqu'à la 7ème colonne
  */
    }

    .progress {
      grid-area: 4 / 1 / 4 / 5; /* Ajustez ces valeurs selon la position des éléments précédents */
      /* 4 / 1 / 6 / 5 signifie :
     - Début sur la 4ème rangée
     - Début sur la 1ère colonne
     - Étendre jusqu'à la 4ème rangée
     - Étendre jusqu'à la 5ème colonne
  */
    }

    .copyright {
      grid-area: 4 / 5 / 4 / 7; /* Ajustez ces valeurs de la même manière */
    }
  }

  @media (min-width: 769px) and (max-width: 1023px) {
    .bio-text p,
    .bio-text h3 {
      margin-left: 60px;
    }
    .bio-text {
      line-height: 2em;
    }
    .bio-img {
      margin-top: 50px;
    }
    .bio-img img {
      margin-top: 20px;
      height: auto; /* Pour maintenir le ratio */
    }
    .skills div ul {
      flex-direction: row;
      flex-wrap: wrap;
    }
    .skills div ul li {
      flex: 0 0 50%; /* Chaque élément prend 50% de la largeur */
      margin: 15px 0;
    }
  }

  /* Media Query pour des écrans encore plus grands, par exemple pour ordinateurs de bureau */
  @media (min-width: 1024px) {
    /* Vous pouvez ajouter des ajustements supplémentaires pour les écrans de bureau si nécessaire */

    .bio,
    .progress,
    .copyright {
      flex-direction: row;
      align-items: center;
    }

    .bio-text p,
    .bio-text h3 {
      margin-left: 20px;
    }
    .bio-text {
      padding-left: 20px;
    }

    .skills div ul {
      flex-direction: row;
      flex-wrap: wrap;
    }
    .skills div ul li {
      flex:
        0 0 33,
        33 %; /* Chaque élément prend 50% de la largeur */
      margin: 20px 0;
      padding: 0 30px;
    }
  }

  @media (min-width: 1440px) {
    /* Vous pouvez ajouter des ajustements supplémentaires pour les écrans de bureau si nécessaire */
    .bio-text,
    .skills {
      padding: 20px 0 0 30px;
      line-height: 2em;
    }
    .bio-img img {
      width: 75%;
    }
    .skills div {
      margin: 50px 0;
    }
  }
</style>
