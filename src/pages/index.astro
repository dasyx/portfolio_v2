<style>
	@import 'https://unpkg.com/normalize.css';
@import 'https://unpkg.com/open-props/normalize.min.css';
@import 'https://unpkg.com/open-props/open-props.min.css';

:root {
  --aspect-ratio: 4 / 1;
  --header-scroll: calc(100vw / 4);
  --title-height: 100px;
  --shared-range: calc((var(--header-scroll) - var(--title-height) )) calc((var(--header-scroll) + (var(--title-height) * 2)));
}

body {
  background: linear-gradient(220.55deg, #0B0A47 0%, #4643DF 100%);
  display: grid;
  min-height: 200vh;
  justify-items: center;
  overflow-x: hidden;
  align-content: start;
  overflow-y: auto;
}
header {
  background: linear-gradient(220.55deg, #4643DF 0%, #0B0A47 100%);;
  background-size: cover;
  max-width: 100%;
  width: var(--size-md);
  aspect-ratio: var(--aspect-ratio);
  position: relative;
  view-timeline-name: --header;
  width: 100vw;
  position: sticky;
  top: calc((var(--header-scroll) * -1) + var(--title-height));
	min-height: 100px;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
}

header:after {
  content: "";
  position: absolute;
  inset: 0;
  background: hsl(0 0% 0% / 0.25);
  opacity: 0;
  backdrop-filter: blur(6px);
  animation: fade-in both ease-in-out;
  animation-timeline: scroll();
  animation-range: calc((var(--header-scroll) - (var(--title-height) * 1.5) )) calc((var(--header-scroll) + (var(--title-height) * 0)));
}

@keyframes fade-in {
  0% {
    opacity: 0;
  }
  100% {
    opacity: 1;
  }
}

.backdrop {
  height: 100%;
  width: 100%;
  object-fit: cover;
  clip-path: inset(0 0 0 0);
}

.avatar {
  width: var(--size-12);
  aspect-ratio: 1;
  border-radius: 50%;
  border: var(--size-2) solid var(--surface-1);
  position: absolute;
  top: 0%;
  left: var(--size-4);
  translate: 0 -100%;
  transform-origin: 0% 50%;
  animation: scale-down both ease-in-out;
  animation-timeline: scroll();
  animation-range: calc((var(--header-scroll) - (var(--title-height) * 1.5) )) calc((var(--header-scroll) + (var(--title-height) * 1)));
  z-index: 2;

}
@keyframes scale-down {
  to {
    scale: 0.35;
    top: 50%;
    translate: 0 -50%;
  }
}

.intro {
  max-width: 100%;
  width: var(--size-md);
  position: sticky;
  top: 0;
  margin-top: calc(var(--size-12) * 0.5);
}

main {
  width: var(--size-md);
  max-width: 100%;
}

.title {
  color: var(--gray-11);
  width: var(--size-md);
  max-width: 100%;
  height: var(--title-height);
/*   display: grid; */
  gap: var(--size-2);
  padding: var(--size-4);
  animation: slide both ease-in-out;
  animation-timeline: scroll();
  animation-range: calc((var(--header-scroll) - (var(--title-height) * 1.5) )) calc((var(--header-scroll) + (var(--title-height) * 0.25)));
}

h1 {
  color: currentColor;
}

@keyframes slide {
  to {
    color: var(--gray-0);
    translate: calc(var(--size-12) * 0.5) 0;
  }
}

.title-wrapper {
  position: relative;
  width: 100vw;
  left: 50%;
  transform: translateX(-50%);
  display: grid;
  justify-content: center;
  animation: shadow both;
  animation-timeline: scroll();
  animation-range: calc((var(--header-scroll) + var(--title-height) )) calc((var(--header-scroll) + (var(--title-height) * 2)));
}

@keyframes shadow {
  to { box-shadow: var(--shadow-5); }
}

.title h1 {
  margin: 0;
}

.title a {
  color: var(--red-6);
  font-weight: bold;
}

ul {
  list-style-type: none;
  padding: 0;
  margin: 0;
}

ul {
  padding-top: var(--size-8);
  display: grid;
  gap: var(--size-4);
}

.skeleton {
  --surface: var(--surface-2);
  --block: var(--surface-3);
  --padding: var(--size-4);
  padding: var(--padding);
  gap: var(--padding);
  width: 100%;
  display: grid;
  grid-template: 1fr 1fr / 25% 1fr;
  background: var(--surface);
  max-inline-size: 100%;
}

.skeleton__block {
  background: var(--block);
}

@keyframes load {
  to {
    background-position: 200% 0;
  }
}

.skeleton__block:first-of-type {
  grid-row: 1 / -1;
  aspect-ratio: 1;
}

.skeleton__block:last-of-type {
  width: 65%;
}

</style>