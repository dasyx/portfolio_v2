---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <title>
      David Levast - Développeur Web Expérimenté | Expert en Cybersécurité et
      Expériences Utilisateur Innovantes
    </title>
    <meta
      name="description"
      content="David Levast, développeur web expérimenté spécialisé en cybersécurité et UX, créateur de solutions web innovantes. Découvrez mes projets et compétences."
    />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/Favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <meta
      property="og:title"
      content="David Levast - Développeur Web et Cybersécurité"
    />
    <meta
      property="og:description"
      content="Portfolio de David Levast, découvrez mes projets en développement web et solutions en cybersécurité."
    />
    <meta property="og:image" content="[URL de l'image de votre portfolio]" />
    <meta property="og:url" content="https://davidlevast.com/" />
    <meta property="og:type" content="website" />
    <meta name="author" content="David Levast" />
    <meta name="twitter:card" content="summary_large_image" />
    <title>{title}</title>
    <script
      src="https://code.iconify.design/iconify-icon/1.0.7/iconify-icon.min.js"
    ></script>
  </head>
  <body>
    <slot />
  </body>
</html>
<style is:global>
  :root {
    --header-scroll: calc(100vw / 4);
    --title-height: 100px;
    --shared-range: calc((var(--header-scroll) - var(--title-height)))
      calc((var(--header-scroll) + (var(--title-height) * 2)));
  }

  body {
    background: linear-gradient(220.55deg, #0b0a47 0%, #4643df 100%);
    min-height: 200vh;
    justify-items: center;
  }

  h2,
  h3 {
    color: #e4b35a;
  }

  h3 {
    font-size: 1.3rem;
  }

  h4 {
    font-size: 1.1rem;
  }

  p,
  li,
  h4 {
    color: #fff;
  }
</style>
